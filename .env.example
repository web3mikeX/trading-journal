# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-replace-with-32-byte-hex-string

# Database Configuration
DATABASE_URL=file:./prisma/dev.db

# For Production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/trading_journal

# Node Environment
NODE_ENV=development

# Email Configuration (for email verification - optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Security Configuration (production only)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Feature Flags
# ENABLE_REGISTRATION=true
# ENABLE_EMAIL_VERIFICATION=false

# Rate Limiting (requests per time window)
# RATE_LIMIT_REGISTER=5
# RATE_LIMIT_LOGIN=10
# RATE_LIMIT_WINDOW_MS=300000

# TradesViz Chart Integration
NEXT_PUBLIC_TRADESVIZ_ENABLED=false

# TradingView Subscription Integration
# Enable TradingView real-time charts for subscription users
NEXT_PUBLIC_TRADINGVIEW_SUBSCRIPTION_ENABLED=true

# TradingView Chart Configuration
# Default chart settings for subscription users
NEXT_PUBLIC_TRADINGVIEW_DEFAULT_THEME=dark
NEXT_PUBLIC_TRADINGVIEW_DEFAULT_INTERVAL=1d
NEXT_PUBLIC_TRADINGVIEW_HIDE_TOP_TOOLBAR=false
NEXT_PUBLIC_TRADINGVIEW_HIDE_SIDE_TOOLBAR=false
NEXT_PUBLIC_TRADINGVIEW_ALLOW_SYMBOL_CHANGE=false

# TradingView Advanced Features (requires TradingView Pro/Premium subscription)
# Enable trade markers on real market data
NEXT_PUBLIC_TRADINGVIEW_TRADE_MARKERS_ENABLED=true

# TradingView Charting Library (optional - requires business application)
# Only needed if you want to use the advanced charting library instead of widgets
# NEXT_PUBLIC_TRADINGVIEW_LIBRARY_PATH=/charting_library/
# NEXT_PUBLIC_TRADINGVIEW_CUSTOM_CSS_URL=

# Data Provider Preferences (fallback order)
# When TradingView subscription data is unavailable
NEXT_PUBLIC_DATA_PROVIDER_PRIORITY=tradingview,yahoo,alpha_vantage,synthetic

# Market Data API Keys (backup providers)
# Alpha Vantage API (free tier: 5 calls/minute, 500 calls/day)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Finnhub API (free tier: 60 calls/minute)
FINNHUB_API_KEY=your-finnhub-api-key-here

# Chart Performance Settings
# Optimize chart loading and rendering
NEXT_PUBLIC_CHART_MAX_DATA_POINTS=1000
NEXT_PUBLIC_CHART_LAZY_LOAD=true
NEXT_PUBLIC_CHART_CACHE_DURATION=300000
